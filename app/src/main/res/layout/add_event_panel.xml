<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="430dp"
    android:orientation="vertical"
    android:layout_marginBottom="367dp"
    android:padding="18dp"
    android:background="@drawable/transparent_background"
    >

    <EditText
        android:id="@+id/eventNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Event Name" />

    <EditText
        android:id="@+id/latitudeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Latitude" />

    <EditText
        android:id="@+id/longitudeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Longitude" />

    <EditText
        android:id="@+id/descriptionEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description" />

<!--    <EditText-->
<!--        android:id="@+id/eventTypeEditText"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:hint="Event Type" />-->
    <EditText
        android:id="@+id/eventCauslityEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="NO.Casualties "
        android:inputType="number" />

<!--    <DatePicker-->
<!--        android:id="@+id/eventdate"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="57dp"-->
<!--        android:layout_marginTop="8dp"-->
<!--        android:datePickerMode="spinner" />-->
    <EditText
        android:id="@+id/dateEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Date"
        android:focusable="false"
        android:clickable="true"/>
    <Spinner
        android:id="@+id/eventTypeSpinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Select Event Type"
        android:entries="@array/event_types_array" />
    <Button
        android:id="@+id/add_marker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#010627"
        android:insetLeft="130dp"
        android:justificationMode="none"
        android:text="Add Marker" />

</LinearLayout>
